use "../stdlib/gpio.dnc";
use "../stdlib/timer.dnc";

fn main() {
    var led_bank: u16 = 0;
    var led_pin:  u16 = 0;
    
    // Set LED as output
    gpio_mode_output(led_bank, led_pin);
    
    var timer: *Timer = timer_get();
    timer_start_repeating(timer, 0x000F, 0x4240); // 000F 4240 = 1,000,000 us = 1s
    loop {
        timer_wait(timer);
        gpio_write(led_bank, led_pin, 1);
        timer_wait(timer);
        gpio_write(led_bank, led_pin, 0);
    }
}

