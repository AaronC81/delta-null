use "ili9341.dnc";

fn main() {
    var device: Ili9341 <- #{
        dc_bank = 0, dc_pin = 1,
        rst_bank = 0, rst_pin = 2,
    };

    ili9341_init(&device);

    loop {
        ili9341_fill_screen(&device, 0x00F8); // Red
        ili9341_fill_screen(&device, 0x9203); // Blue
        ili9341_fill_screen(&device, 0x40D3); // Orange
    }
}

